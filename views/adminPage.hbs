{{ layout}}

<div class="product-container">
  <h2 class="section-title">Manage Clothing Items</h2>
  <a href="/admin/create" class="btn btn-success mb-3">Add New Clothing Item</a>
  <div class="row">
    {{#each clothingItems }}
    <div class="col-md-4">
      <div class="card product-card mb-4">
        <img src="{{#if this.linkPhoto}}{{this.linkPhoto}}{{else}}/images/productdemo.jpg{{/if}}" class="card-img-top" alt="{{this.name}}">
        <div class="card-body">
          <h5 class="product-name">{{this.name}}</h5>
          <p class="product-price">{{this.price}}</p>
          <div class="d-flex justify-content-center">
            <a href="/clothing/detail/{{this._id}}" class="btn btn-primary mx-1">View Details</a>
            <a href="/admin/edit/{{this._id}}" class="btn btn-warning mx-1">Edit</a>
            <form action="/admin/delete/{{this._id}}" method="POST" class="d-inline mx-1">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <div class="see-more">
    <button class="btn btn-dark">SEE MORE</button>
  </div>
</div>
