{{ layout}}

<div class="product-container">
  <h2 class="section-title">{{#if query}}Search Results for "{{query}}"{{else}}All Clothing Items{{/if}}</h2>
  <div class="row">
    {{#if clothingItems.length}}
      {{#each clothingItems }}
      <div class="col-md-4">
        <div class="card product-card mb-4">
          <img src="{{#if this.linkPhoto}}{{this.linkPhoto}}{{else}}/images/productdemo.jpg{{/if}}" class="card-img-top" alt="{{this.name}}">
          <div class="card-body">
            <h5 class="product-name">{{this.name}}</h5>
            <p class="product-price">{{this.price}}</p>
            <a href="/clothing/detail/{{this._id}}" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
      {{/each}}
    {{else}}
      <p>No items found matching your search.</p>
    {{/if}}
  </div>
</div>
